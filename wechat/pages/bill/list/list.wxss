page {
  background-color: rgba(222 228 232);
}

.top {
  width: 100%;
  height: 400rpx;
  background-color: rgba(2, 164, 128, 1);
  color: white;
  position: fixed;
  top: 0rpx;
}

.item-search-list {
  float: left;
  width: 100%;
  height: 70rpx;
  line-height: 50rpx;
  padding-top: 20rpx;
}

.item-search-left {
  float: left;
  width: 30%;
  padding-left: 10rpx;
}

.item-search-right {
  float: left;
  width: 50%;
  text-align: left;
}

.total-money {
  font-size: 50rpx;
}

.list {
  width: 98%;
  margin-left: 1%;
  margin-top: 10rpx;
}

.list-first {
  margin-top: 410rpx;
}

.list-title {
  background-color: #fefefe;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}

.list-title-left {
  float: left;
  width: 40%;
  text-indent: 8rpx;
}

.list-title-right {
  float: right;
  text-align: right;
  font-size: 20rpx;
  width: 58%;
  padding-right: 8rpx;
}

.list-bill {
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  border-bottom: 1rpx solid #F3F6F8;
  background-color: rgba(255, 255, 255, 1);
}

.list-bill-image {
  float: left;
  width: 80rpx;
  height: 80rpx;
  padding: 8rpx;
}

.list-bill-text {
  float: left;
  width: 50%;
  font-size: 30rpx;
}

.list-bill-money {
  float: right;
  text-align: right;
  width: 30%;
  padding-right: 10rpx;
  font-size: 30rpx;
}

.bill-btn {
  width: 64rpx;
  height: 64rpx;
  position: fixed;
  right: 20rpx;
  bottom: 150rpx;
}