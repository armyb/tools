<view class="container">
	<view class="wechatapp">
		<view class="header">
			<open-data class="" type="userAvatarUrl"></open-data>
		</view>
	</view>
	<view class="auth-title">申请获取以下权限</view>
	<view class="auth-subtitle">获得你的公开信息（昵称、头像等）</view>
	<view class="login-btn">
		<button class="login-btn" type="default" style="background-color: #3cba92;color:white;width:100%;" open-type="getUserInfo" bindgetuserinfo="onGetUserInfo">
			登录授权
		</button>
	</view>
	<view class="no-login-btn">
		<button class="btn-normal" bindtap="onNotLogin" style="background-color: #ff7900;color:white;width:100%;">暂不登录</button>
	</view>
</view>